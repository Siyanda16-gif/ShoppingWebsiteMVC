@model IEnumerable<ShoppingWebsiteMVC.Models.Cart>

@{
    ViewBag.Title = "Confirm Order";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    .gt {
        color: white;
    }
    .UP {
        margin-top: 20px;
        margin-bottom: 20px;
        color: blue !important;
    }
</style>
<div class="UP">
    @Html.ActionLink("Update Address", "Edit", "User", null, new { @class = "btn btn-success col-md-3 col-6" })
</div>

<h2 class="gt">Pay Your Order</h2>
<h4 class="gt">Confirm Payment</h4>
<p class="gt">
    ThankYou @ViewBag.Name, for shopping with us

    <br />
<p class="gt">
<p class="gt">Your Order will be delevered to - </p>
<br />
<blockquote class="gt"> @ViewBag.Address</blockquote>
</p>

<div class="alert-info" class="gt">Complete your payment by clicking paynow</div>

<table class="table">
    <tr>
        <th colspan="3" class="gt">
            Review Your orders
        </th>

    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td class="gt">
                @Html.DisplayFor(modelItem => item.Products.ProductName)
            </td>
            <td class="gt">
                @Html.DisplayFor(modelItem => item.NoofProduct)
            </td>
            <td class="gt">
                @Html.DisplayFor(modelItem => item.Amount)
            </td>

        </tr>
    }
    <p class="gt"> Total Amount to be Paid <b>R @ViewBag.TotalSum</b></p>
</table>

@Html.ActionLink("Pay Now", "Create", "Pay", null, new { @class = "btn btn-success col-4" })
